<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @article.title %></h3>
              <%= render 'crud_menus', article: @article %>
            </div>
          </div>
          <p><%= simple_format(@article.body) %></p>
        </div>
      </article>
    </div>
  </div>
</div>